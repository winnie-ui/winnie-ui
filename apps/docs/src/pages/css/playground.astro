<style>
  .center {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--wui-space-4);
    padding: var(--wui-space-5);
    height: 100dvh;
    overflow: auto;
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: var(--wui-space-8);
    max-width: 400px;
    width: 100%;
  }

  .row {
    align-items: center;
    display: flex;
    gap: var(--wui-space-4);
  }

  .demo-listbox {
    [data-component="listbox-item"] {
      &:hover {
        background: var(--wui-color-grey-3);

        [data-component="label"] {
          color: var(--wui-color-grey-12);
        }

        [data-component="icon"] {
          color: var(--wui-color-grey-12);
        }
      }

      [data-component="icon"] {
        color: var(--wui-color-grey-11);
      }

      [data-component="label"] {
        color: var(--wui-color-grey-11);
      }
    }

    [data-component="header"] {
      [data-component="label"] {
        color: var(--wui-color-grey-12);
        font-weight: var(--wui-font-weight-medium);
      }
    }

    [data-component="separator"] {
      background: var(--wui-color-grey-5);
      height: 1px;
    }
  }
</style>
