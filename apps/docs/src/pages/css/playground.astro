---
import { Check } from "lucide-react";
import { Checkbox } from "react-aria-components";
import BaseHead from "~/layouts/base/base-head.astro";
import BaseLayout from "~/layouts/base/layout.astro";
---

<BaseLayout>
  <BaseHead slot="head" title="playground" description="playground" />
  <div class="center">
    <Checkbox client:only="react" defaultSelected={false} />
  </div>
</BaseLayout>

<style>
  .center {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--wui-space-4);
    padding: var(--wui-space-5);
    height: 100dvh;
    overflow: auto;
  }

  .foo {
    background: blue;
    height: 100px;
    width: 100%;
  }

  [data-loading="true"] {
    color: transparent;
    background: linear-gradient(
      to bottom right,
      var(--wui-color-grey-9),
      var(--wui-color-grey-10)
    );
    box-decoration-break: clone;
  }
</style>
