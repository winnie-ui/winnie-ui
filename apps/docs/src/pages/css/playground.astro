---
import BaseHead from "~/layouts/base/base-head.astro";
import BaseLayout from "~/layouts/base/layout.astro";

import { SidebarButtons } from "./_sidebar-buttons.tsx";
---

<BaseLayout>
  <BaseHead slot="head" title="playground" description="playground" />
  <div data-component="layout">
    <nav data-slot="sidebar">sidebar</nav>
    <div data-slot="content">
      <div class="content-container">
        <SidebarButtons client:load />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  [data-component="layout"] {
    [data-slot="mask"] {
      background: var(--wui-color-black-a4);
    }

    [data-slot="sidebar"] {
      background: var(--wui-color-grey-4);
      transition-property: left, top, height;
      transition-duration: 0.3s;
      transition-timing-function: var(--wui-bezier-1);
    }

    [data-slot="content"] {
      transition-property: padding;
      transition-duration: 0.3s;
      transition-timing-function: var(--wui-bezier-1);

      .content-container {
        height: 1500px;
      }
    }
  }
</style>
