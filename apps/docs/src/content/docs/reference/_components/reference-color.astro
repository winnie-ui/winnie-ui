---
export type Props = {
  color: string;
  swatch: string;
};

const { color, swatch } = Astro.props;
---

<div
  class="reference-color"
  style={{
    "--reference-color": `var(--go-color-${color}-${swatch})`,
  }}
>
  <div class="reference-color-swatch"></div>
</div>

<style>
  .reference-color {
    background-image: linear-gradient(
        45deg,
        var(--go-color-grey-4) 25%,
        transparent 25%
      ),
      linear-gradient(135deg, var(--go-color-grey-4) 25%, transparent 25%),
      linear-gradient(45deg, transparent 75%, var(--go-color-grey-4) 75%),
      linear-gradient(135deg, transparent 75%, var(--go-color-grey-4) 75%);
    background-size: 16px 16px;
    background-position:
      0px 0px,
      8px 0px,
      8px -8px,
      0px 8px;
    border-radius: var(--go-border-radius-3);
    height: 32px;
    min-width: 32px;
    width: 100%;

    .reference-color-swatch {
      background-color: var(--reference-color);
      border-radius: var(--go-border-radius-3);
      height: 100%;
      width: 100%;
    }
  }
</style>
