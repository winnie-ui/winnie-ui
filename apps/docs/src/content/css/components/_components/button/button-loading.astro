---
import { Loader } from "lucide-react";

import Button from "./button.astro";
---

<Button data-variant="outlined">
  <span class="loader-container" data-component="loading" slot="icon">
    <Loader className="loader" data-component="loading" />
  </span>
  New Issue
</Button>

<style>
  .row {
    align-items: center;
    display: flex;
    gap: var(--wui-space-4);
  }

  .loader-container {
    align-items: center;
    display: flex;
    justify-content: center;
    height: 100%;
    width: 100%;
  }

  .loader {
    animation: spin 2.5s linear;
    animation-iteration-count: infinite;
    height: 1.2em;
    width: 1.2em;
    transform-origin: center center;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
